function sumAll (arr) {
  var newArr = [];
  
  var maxNum = Math.max(arr[0],arr[1]);
  var minNum = Math.min(arr[0],arr[1]);
  
  for (var i = minNum ; i <= maxNum ; i++) {
    newArr.push(i);
  }
  var total = newArr.reduce(function (a,b) {
    return a + b;
  });
  return total;
}
