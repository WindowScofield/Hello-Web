1.===============================================

function sumAll (arr) {
  arr.sort(function (a,b) {
    return a - b;
  });
  var count = 0;
  for (var i = arr[0] ; i <= arr[1] ; i++) {
    count += i;
  }
  return count;
}
sumAll([1, 4]);//10

